<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="txt_category_style">

        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>
    <style name="card_style">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="cardBackgroundColor">@color/bottom_view</item>
        <item name="cardCornerRadius">20dp</item>

    </style>
    <style name="img_category_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>